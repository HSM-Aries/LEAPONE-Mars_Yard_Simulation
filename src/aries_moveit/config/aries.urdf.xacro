<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="aries">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import aries urdf file -->
    <xacro:include filename="$(find aries)/urdf/my_robot.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="aries.ros2_control.xacro" />


    <xacro:aries_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
